<form method="POST" class="m-4" action="/post/{{post._id}}?_method=PUT">
  <div class="h4 mt-2">
    Edit Post
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Title</label>
    <input type="text" class="form-control" placeholder="EX: Quangdz"  value='{{post.name}}' name = "name">
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" name="description">{{post.description}}</textarea>
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">Video Id</label>
    <input type="text" class="form-control" value='{{post.videoId}}' name="videoId">
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>