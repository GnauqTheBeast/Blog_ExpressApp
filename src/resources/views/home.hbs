<div class="container">
  <div class="row">
    <div class="col-md-4">
        <h1>{{title}}</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    {{#each posts}}
      <div class="col-md-4">
            <div class="card mb-4" style="width: 18rem;">
                <a href="/post/{{this.slug}}">
                  <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/post/{{this.slug}}">
                      <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <p>{{this.creatAt}}</p>
                    <a href="/post/{{this.slug}}" class="btn btn-primary">READ</a>
                </div>
            </div>
      </div>
    {{/each}}
  </div>
</div>